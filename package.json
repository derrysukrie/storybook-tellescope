{
    "name": "storybook-ui",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "organize-imports": "biome check --write --apply-unsafe .",
        "check": "biome check . && tsc --noEmit",
        "preview": "vite preview",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "predeploy": "npm run build-storybook",
        "deploy": "gh-pages -d storybook-static",
        "test": "vitest run",
        "test:sample": "vitest --config vite.config.ts --environment jsdom src/components/atoms/Avatar/Avatar.test.tsx",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "prepare": "husky"
    },
    "dependencies": {
        "@emoji-mart/data": "^1.2.1",
        "@emoji-mart/react": "^1.1.1",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@fontsource/roboto": "^5.2.6",
        "@mui/icons-material": "^5.17.1",
        "@mui/material": "^5.17.1",
        "@tanstack/react-virtual": "^3.13.12",
        "emoji-mart": "^5.6.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.2",
        "@chromatic-com/storybook": "^4.0.0",
        "@storybook/addon-a11y": "^9.0.4",
        "@storybook/addon-docs": "^9.0.4",
        "@storybook/addon-onboarding": "^9.0.4",
        "@storybook/addon-vitest": "^9.0.4",
        "@storybook/react-vite": "^9.0.4",
        "@testing-library/jest-dom": "^6.7.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "@vitest/browser": "^3.2.1",
        "@vitest/coverage-v8": "^3.2.1",
        "gh-pages": "^6.3.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "lint-staged": "^16.1.5",
        "playwright": "^1.52.0",
        "storybook": "^9.0.4",
        "typescript": "~5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.2.1"
    },
    "overrides": {
        "@emoji-mart/react": {
            "react": "^19.1.0"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "biome format --write",
            "biome check --write"
        ],
        "*.{json,md,mdx}": [
            "biome format --write"
        ]
    }
}
