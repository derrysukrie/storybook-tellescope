# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 4

# CSS, SCSS, and LESS files
[*.{css,scss,less}]
indent_size = 4

# HTML files
[*.html]
indent_size = 4

# Configuration files
[*.{config.js,config.ts}]
indent_size = 4
